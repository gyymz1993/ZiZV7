<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/common_bg" />

    <RelativeLayout
        android:id="@+id/re_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="30 èµž"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <com.lsjr.zizisteward.coustom.CheckableImageView
            android:id="@+id/image_shijie_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/selector_like"
            />

        <ImageView
            android:id="@+id/iv_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/image_shijie_zan"
            android:scaleType="fitXY"
            android:background="@drawable/new_eval" />

        <CheckBox
            android:button="@null"
            android:clickable="true"
            android:id="@+id/image_shijie_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/iv_eval"
            android:scaleType="fitXY"
            android:background="@drawable/selector_collect"
            tools:ignore="KeyboardInaccessibleWidget" />

    </RelativeLayout>


</LinearLayout>